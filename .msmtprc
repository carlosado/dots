# Config file of the SMTP client 'msmtp'

# Default values for all accounts
defaults
auth            on
tls             on
logfile         ~/.msmtp.log

# Gmail account
account         Gmail
host            smtp.gmail.com
port            587
from            diaoliveira@gmail.com
user            diaoliveira
passwordeval    "gpg --quiet --for-your-eyes-only --no-tty --decrypt ~/Mail/credentials/msmtp.gpg"
tls_trust_file  ~/.ssl/certs/gmail-smtp.crt


# Default account
account default : Gmail
